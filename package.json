{
  "name": "pillsure-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "PillSure - Healthcare management platform monorepo",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:server dev:client",
    "dev:client": "npm run --workspace=client dev",
    "dev:server": "npm run --workspace=server dev",
    "build": "npm run --workspace=client build && npm run --workspace=server build",
    "build:client": "npm run --workspace=client build",
    "build:server": "npm run --workspace=server build",
    "start": "npm-run-all --parallel start:server start:client",
    "start:client": "npm run --workspace=client start",
    "start:server": "npm run --workspace=server start",
    "clean": "npm run clean:client && npm run clean:server",
    "clean:client": "cd client && rm -rf node_modules .next",
    "clean:server": "cd server && rm -rf node_modules dist",
    "db:generate": "npm run --workspace=server db:generate",
    "db:upgrade": "npm run --workspace=server db:upgrade",
    "db:current": "npm run --workspace=server db:current",
    "db:history": "npm run --workspace=server db:history",
    "db:pending": "npm run --workspace=server db:pending",
    "db:studio": "npm run --workspace=server db:studio",
    "init:roles": "npm run --workspace=server init:roles"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
